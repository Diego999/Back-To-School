<% if defined?(is_followed) and is_followed %>
    <div class="list-element following-promotion">
<% else %>
    <div class="list-element main-promotion">
<% end %>

<%= link_to promotion.establishment.name + " | " + promotion.name, promotion%>

<% if defined?(is_followed) and is_followed %>
    <%= form_for(:promotion, :url => url_for(:controller => 'promotions', :action => 'leave')) do |f| %>
        <%= hidden_field_tag 'id', promotion.id %>
        <%= f.submit '', :class => "list-button leave-button" %>
    <% end %>
<% end %>
</div>
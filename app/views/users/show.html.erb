<% content_for :sidebar do %>
    <p></p>
<% end %>

<div id="content" class="col col9 last">
  <div id="discussion-list" class="row clearfix">
    <header><h2><%= @data[:user].firstname %> <%= @data[:user].lastname %> | <%= link_to @data[:establishment].name, @data[:establishment] %></h2></header>

    <article class="event-item item">
      <p class="message">
        <strong>Promotions</strong>
      </p>
    </article>

  <% @data[:promotions].each do |promotion| %>
      <article class="message-item item">
        <p class="message">
          <%= link_to promotion.name, promotion %>
        </p>
      </article>
  <% end %>


    <article class="event-item item">
      <p class="message">
        <strong>Followed Promotions</strong>
      </p>
    </article>

  <% @data[:followed_promotions].each do |promotion| %>
      <article class="message-item item">
        <p class="message">
          <%= link_to promotion.name, promotion %>
        </p>
      </article>
  <% end %>
  </div>
</div>
